@using Webphone._Models
@using Microsoft.AspNetCore.Http
@using Webphone.Extensions
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    var cart = HttpContextAccessor.HttpContext.Session.GetObject<List<Product>>("Cart");
    var loginid = HttpContextAccessor.HttpContext.Session.GetString("UserId");
}
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layoutuser.cshtml";
}
@if (cart != null && cart.Count > 0)
{
        <div class="container h-100 py-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col" class="h5">Shopping Bag</th>
                                    <th scope="col">Brand</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Delete</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pro in cart)
                                {
                                    <input type="hidden" id="productIdInput" value="@pro.ProId" readonly/>
                                    <tr>
                                        <th scope="row">
                                            <div class="d-flex align-items-center">
                                                <img style="max-width:200px" src="data:image/jpeg;base64,@Convert.ToBase64String(pro.ProImg)" alt="Product Image" />
                                                <style="width: 120px;" alt="Book">
                                                <div class="flex-column ms-4">
                                                    <p class="mb-2">@pro.ProName</p>
                                                </div>
                                            </div>
                                        </th>
                                        <td class="align-middle">
                                            <p class="mb-0" style="font-weight: 500;">@pro.ProBrand</p>
                                        </td>
                                        <td class="align-middle">
                                            <div class="d-flex flex-row">
                                                    

                                                <input id="form1" min="0" name="quantity" value="@pro.Quantity" type="number"
                                                       class="form-control form-control-sm" style="width: 50px;" />

                                            </div>
                                        </td>
                                        <td class="align-middle">
<p class="mb-0" id="price" style="font-weight: 500;">
    @pro.ProPrice
</p>
                                        </td>
                                        <td class="align-middle">
                                            <a asp-action="Remove" asp-route-id="@pro.ProId"><i class="fa-solid fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card shadow-2-strong mb-5 mb-lg-0" style="border-radius: 16px;">
                        <div class="card-body p-4">

                            <div class="row">
                                <div class="col-md-6 col-lg-4 col-xl-3 mb-4 mb-md-0">
                                    <form>
                                        
                                        
                                        <div class="d-flex flex-row pb-3">
                                            <div class="d-flex align-items-center pe-2">
                                                <input class="form-check-input" type="radio" name="radioNoLabel" id="radioNoLabel1v"
                                                       value="" aria-label="..." checked />
                                            </div>
                                            <div class="rounded border w-100 p-3">
                                                <p class="d-flex align-items-center mb-0">
                                                    <i class="fab fa-cc-mastercard fa-2x text-dark pe-2"></i>Credit
                                                    Card
                                                </p>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row pb-3">
                                            <div class="d-flex align-items-center pe-2">
                                                <input class="form-check-input" type="radio" name="radioNoLabel" id="radioNoLabel2v"
                                                       value="" aria-label="..." />
                                            </div>
                                            <div class="rounded border w-100 p-3">
                                                <p class="d-flex align-items-center mb-0">
                                                    <i class="fab fa-cc-visa fa-2x fa-lg text-dark pe-2"></i>Debit Card
                                                </p>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row">
                                            <div class="d-flex align-items-center pe-2">
                                                <input class="form-check-input" type="radio" name="radioNoLabel" id="radioNoLabel3v"
                                                       value="" aria-label="..." />
                                            </div>
                                            <div class="rounded border w-100 p-3">
                                                <p class="d-flex align-items-center mb-0">
                                                    <i class="fab fa-cc-paypal fa-2x fa-lg text-dark pe-2"></i>PayPal
                                                </p>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-md-6 col-lg-4 col-xl-6">
                                    <div class="row">
                                        <div class="col-12 col-xl-6">
                                            <div class="form-outline mb-4 mb-xl-5">
                                                <input type="text" id="typeName" class="form-control form-control-lg" siez="17"
                                                       placeholder="John Smith" />
                                                <label class="form-label" for="typeName">Name on card</label>
                                            </div>

                                            <div class="form-outline mb-4 mb-xl-5">
                                                <input type="text" id="typeExp" class="form-control form-control-lg" placeholder="MM/YY"
                                                       size="7" id="exp" minlength="7" maxlength="7" />
                                                <label class="form-label" for="typeExp">Expiration</label>
                                            </div>
                                        </div>
                                        <div class="col-12 col-xl-6">
                                            <div class="form-outline mb-4 mb-xl-5">
                                                <input type="text" id="typeText1" class="form-control form-control-lg" siez="17"
                                                       placeholder="1111 2222 3333 4444" minlength="19" maxlength="19" />
                                                <label class="form-label" for="typeText">Card Number</label>
                                            </div>

                                            <div class="form-outline mb-4 mb-xl-5">
                                                <input type="password" id="typeText" class="form-control form-control-lg"
                                                       placeholder="&#9679;&#9679;&#9679;" size="1" minlength="3" maxlength="3" />
                                                <label class="form-label" for="typeText">Cvv</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-xl-3">
                                <div class="d-flex justify-content-between" style="font-weight: 500;">
                                    <p class="mb-2">Subtotal</p>
                                    <p class="mb-2" id="subtotal">  </p>
                                </div>

                                <div class="d-flex justify-content-between" style="font-weight: 500;">
                                    <p class="mb-0">Shipping</p>
                                    <p class="mb-0" id="shippingCost">@{
                                    decimal shipcost = 2.99m;    
                                    }@shipcost</p>
                                </div>

                                <hr class="my-4">

                                <div class="d-flex justify-content-between mb-4" style="font-weight: 500;">
                                    <p class="mb-2">Total (tax included)</p>
                                    <p class="mb-2" id="totalAmount"></p>
                                </div>
                            </div>
                            </div>
                            <hr />
                             <form method="post">
                                    <div class="col-12 col-xl-6">
                                            <div class="form-outline mb-4 mb-xl-5">
                                                <input type="text" id="typeText1" name="name" class="form-control form-control-lg" siez="17" />
                                                <label class="form-label" for="typeText">Your Name</label>
                                            </div>

                                            <div class="form-outline mb-4 mb-xl-5">
                                                <input type="text" id="typeText1" name="address" class="form-control form-control-lg"
                                                       size="17"/>
                                                <label class="form-label" for="typeText">Your address</label>
                                            </div>
                                            </div>
                                            <div class="col-12 col-xl-6">
                                            <div class="form-outline mb-4 mb-xl-5">
                                                <input type="text" id="typeText1" name="phone" class="form-control form-control-lg"
                                                       size="17"/>
                                                <label class="form-label" for="typeText">Your phone number</label>
                                            </div>
                                            <div class="form-outline mb-4 mb-xl-5">
                                                <input type="email" id="typeText1" name="email" class="form-control form-control-lg"
                                                       size="17"/>
                                                <label class="form-label" for="typeText">Your email</label>
                                            </div>
                                        </div>
                                    <input type="hidden" readonly id="totalAmount" name="totalAmount"  />
                                    <input type="hidden" readonly id="totalAmount" name="loginid" value="@loginid" />
                                        <button type="submit" asp-action="Checkout" asp-controller="Cart" class="btn btn-primary btn-block btn-lg">
                                    <div class="d-flex justify-content-between">
                                        <span>Checkout</span>
                                        <span id="checkoutAmount">$ @(cart.Sum(item => item.Quantity * item.ProPrice) + shipcost)</span>
                                    </div>
                                </button>
                                </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
}
else
{
    <div class="container h-100 py-5">
        <h3>Giỏ hàng trống</h3>
    </div>
}
 <script>
    
    document.addEventListener('DOMContentLoaded', () => {
        const quantityInputs = document.querySelectorAll('input[name="quantity"]');
       
    // Lấy giá trị ban đầu của tổng tiền
    let subtotal = parseFloat(document.getElementById('subtotal').textContent.replace('$', ''));
    let shippingCost = parseFloat(document.getElementById('shippingCost').textContent);
    
        // Hàm tính lại tổng tiền khi số lượng thay đổi
        const updateTotalAmount = () => {
        let newSubtotal = 0;

            quantityInputs.forEach(input => {
                const newQuantity = parseInt(input.value);
    const price = parseFloat(document.getElementById('price').textContent.replace('$', ''));
    newSubtotal += newQuantity * price;
            });

    // Cập nhật tổng tiền và hiển thị lên trang
    const totalAmount = newSubtotal + shippingCost;
    document.getElementById('totalAmount').textContent = `$${totalAmount.toFixed(2)}`;
    document.getElementById('subtotal').textContent = `$${newSubtotal.toFixed(2)}`;
        document.getElementById('checkoutAmount').textContent = `$${totalAmount.toFixed(2)}`;

        };

        // Thêm sự kiện cho từng input quantity
        quantityInputs.forEach(input => {
        input.addEventListener('input', () => {
            updateTotalAmount();
        });
        });

    updateTotalAmount();
        var cartData = @Html.Raw(Json.Serialize(HttpContextAccessor.HttpContext.Session.GetObject<List<Product>>("Cart")));
        if(cartData!=null){
        console.log('Cart:', cartData);
        quantityInputs.forEach(input => {
    input.addEventListener('input', () => {
        const newQuantity = parseInt(input.value);
        const productId = input.dataset.productId;

        cartData.forEach(product => {
            if (product.ProId === productId) {
                product.Quantity = newQuantity;
            }
        });

        // Lưu lại giỏ hàng mới vào Session
        const updatedCartJson = JSON.stringify(cartData);
        fetch('/Cart/UpdateCart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: updatedCartJson
        })
        .then(response => {
            if (response.ok) {
                console.log('Cart updated successfully');
                // Cập nhật giao diện nếu cần thiết
            } else {
                console.error('Failed to update cart');
            }
        })
        .catch(error => {
            console.error('Error updating cart:', error);
        });
    });
});
        }

    });

</script>
