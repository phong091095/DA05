@model Webphone._Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutMn.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProBrand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProBrand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ram)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ram)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cpu)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cpu)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hdh)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hdh)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Camera)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Camera)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProImg)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.ProImg != null && Model.ProImg.Length > 0)
            {
                <img style="max-width:200px" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ProImg)" alt="Product Image" />
            }
            else
            {
                <p>No image available</p>
            }

        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
