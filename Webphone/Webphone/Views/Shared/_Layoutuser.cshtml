@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Session
@inject IHttpContextAccessor HttpContextAccessor
@{
    var username = HttpContextAccessor.HttpContext.Session.GetString("Username");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PhoneWorld</title>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://kit.fontawesome.com/b360405e70.js" crossorigin="anonymous"></script>
    <!-- AngularJS and Angular Route -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular-route.min.js"></script>
    <!--link-->
    <link href="~/css/mycss.css" rel="stylesheet" />
    <script src="~/js/myscript.js"></script>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <div class="sticky-top">
        <nav class="navbar navbar-expand-lg bg-white">
            <div class="container-fluid">
                <a href="~/Home/Index"> <img src="~/img/Brand_logo.png" alt="" style="max-width: 100px; border-radius: 10px;"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="~/Home/Index">Trang chủ</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-list"></i> Danh Mục
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-mobile-screen-button"></i> Điện thoại <i class="fa-solid fa-chevron-right"></i></a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-laptop"></i> Laptop <i class="fa-solid fa-chevron-right"></i></a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-house-signal"></i> Smarthome <i class="fa-solid fa-chevron-right"></i></a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-desktop"></i> PC <i class="fa-solid fa-chevron-right"></i></a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-headphones"></i> Âm thanh <i class="fa-solid fa-chevron-right"></i></a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-newspaper"></i> Khuyến mãi <i class="fa-solid fa-chevron-right"></i></a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <form asp-action="Search" asp-controller="Home" method="get">
                                <div class="input-group">
                                    <input class="form-control me-2" type="search" name="searchString" placeholder="Bạn cần tìm gì?" aria-label="Search">
                                    <button class="btn btn-outline-primary" type="submit">
                                        <i class="fa-solid fa-magnifying-glass mt-2 ms-1 text-black"></i>
                                    </button>
                                </div>
                            </form>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="#"><i class="fa-solid fa-phone"></i> Liên hệ: 0938xxx68</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Hỏi Đáp</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Về chúng tôi</a>
                        </li>
                    </ul>
                    <div class="ml-auto">
                        <a class="btn btn-outline-primary" href="~/Cart/Index" type="submit"><i class="fa-solid fa-cart-shopping"></i> Giỏ hàng</a>
                        @if (string.IsNullOrEmpty(username))
                        {
                            <a href="~/Login" class="btn btn-outline-primary"><i class="fa-regular fa-circle-user"></i> Đăng nhập</a>
                        }
                        else
                        {
                            <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @username
                            </button>
                            <div class="dropdown">
                                
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">Thông tin</a></li>
                                    <li><a class="dropdown-item" href="#">Đổi mật khẩu</a></li>
                                    <hr />
                                    <li><a asp-action="Logout" class="dropdown-item">Đăng xuất</a></li>
                                </ul>
                            </div>
                        }                        
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <div>
        @RenderBody()
    </div>
    <footer>
        <div class="row">
            <div class="col-sm-3">
                <h5 style="margin-left: 40px;">Chứng chỉ</h5>
                <div class="row ms-1">
                    <div class="col-md-3" id="chungchi">
                        <img src="~/img/cc-2.webp" alt="">
                        <img src="~/img/cc-3.svg" alt="">
                        <img src="~/img/cc-4.webp" alt="">
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <h5>Về chúng tôi</h5>
                <ul>
                    <li><a href="#">Liên hệ</a></li>
                    <li><a href="#">Trợ giúp</a></li>
                    <li><a href="#">Tuyển dụng</a></li>
                </ul>
                <h5>Theo dõi chúng tôi trên</h5>
                <ul>
                    <li><a href="#"><i class="bi bi-facebook"></i> Facebook</a></li>
                    <li><a href="#"><i class="bi bi-instagram"></i> Instagram</a></li>
                    <li><a href="#"><i class="bi bi-youtube"></i> Youtube</a></li>
                    <li><a href="#"><i class="bi bi-tiktok"></i> Tiktok</a></li>
                </ul>
            </div>
            <div class="col-sm-3">
                <h5 style="margin-left: 35px;">Sản phẩm</h5>
                <ul>
                    <li><a href="#">Điện thoại</a></li>
                    <li><a href="#">Laptop</a></li>
                    <li><a href="#">Combo phụ kiện</a></li>
                    <li><a href="#">Gaming Gear</a></li>
                    <li><a href="#">Smarthome</a></li>
                    <li><a href="#">Gia dụng</a></li>
                </ul>

            </div>
            <div class="col-sm-3">
                <h5 style="margin-left: 35px;">Khác</h5>
                <ul>
                    <li><a href="#">Chính sách quyền riêng</a></li>
                    <li><a href="#">Điều khoản & điều kiện</a></li>
                    <li><a href="#">Chính sách hoạt động</a></li>
                </ul>
            </div>
        </div>
        <hr>
        <div style="text-align: center; color: aliceblue;">
            Copyright © 2024 . All rights reserved
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

</body>
</html>

