@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Session
@inject IHttpContextAccessor HttpContextAccessor
@{
    var username = HttpContextAccessor.HttpContext.Session.GetString("Mnuser");
   
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Product Management </title>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://kit.fontawesome.com/b360405e70.js" crossorigin="anonymous"></script>
    <!-- AngularJS and Angular Route -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular-route.min.js"></script>
    <!--link-->
    <link href="~/css/mycss.css" rel="stylesheet" />
    <script src="~/js/myscript.js"></script>
</head>

    <body>

        
        <div class="container-fluid">
            <div class="row flex-nowrap">
                <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                    <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                        <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                            <span class="fs-5 d-none d-sm-inline">Management</span>
                        </a>
                        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                            <li class="nav-item">
                                <a href="~/Products/Index" class="nav-link align-middle px-0">
                                    <i class="fa-brands fa-product-hunt"></i><span class="ms-1 d-none d-sm-inline"> Products</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="~/Customers/Index" class="nav-link align-middle px-0">
                                    <i class="fa-regular fa-user"></i><span class="ms-1 d-none d-sm-inline"> Customers</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="~/LoginInfoes/Index" class="nav-link align-middle px-0">
                                    <i class="fa-regular fa-user"></i><span class="ms-1 d-none d-sm-inline">User</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="~/Invoices/Index" class="nav-link align-middle px-0">
                                    <i class="fa-solid fa-file-invoice"></i><span class="ms-1 d-none d-sm-inline"> Invoice</span>
                                </a>
                            </li>
                        <li class="nav-item">
                            <a href="~/InvoiceDetails/Index" class="nav-link align-middle px-0">
                                <i class="fa-solid fa-file-invoice"></i><span class="ms-1 d-none d-sm-inline"> Invoice Details</span>
                            </a>
                        </li>
                        </ul>
                        <hr>
                        <div class="dropdown pb-4">
                            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="https://github.com/mdo.png" alt="hugenerd" width="30" height="30" class="rounded-circle">
                                <span class="d-none d-sm-inline mx-1">@username</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                                <li><a class="dropdown-item" asp-action="Logout">Sign out</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col py-3">
                    @RenderBody()
                </div>
            </div>
        </div>

    }
   
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

    </body>

</html>
